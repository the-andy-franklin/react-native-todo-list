{
	"tasks": {
		"start": "deno run -A --watch --inspect-wait src/server.ts"
	},
	"imports": {
		"hono/": "https://deno.land/x/hono@v4.2.2/",
		"mongoose": "npm:mongoose@8.4.4",
		"passport": "npm:passport",
		"bcryptjs": "npm:bcryptjs",
		"cors": "npm:cors",
		"zod": "npm:zod",
		"fp-try": "jsr:@2or3godzillas/fp-try",
		"dotenv": "https://deno.land/std@0.224.0/dotenv/mod.ts"
	},
	"compilerOptions": {
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"noUncheckedIndexedAccess": true
	},
	"fmt": {
		"lineWidth": 120,
		"indentWidth": 4,
		"useTabs": true
	},
	"lint": {
		"rules": {
			"exclude": [
				"no-unused-vars",
				"no-explicit-any"
			]
		}
	}
}
